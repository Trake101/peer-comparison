<%highlight_tab "review"%>
<h1>Comparison Groups</h1>
<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Base Institution</th>
      <th>Number of Peers</th>
      <th>Weights</th>
      <th>Created on</th>
    </tr>
  </thead>
  <tbody>
    <%@comparisons.each do |c|%>
    <tr>
      <td><%=link_to c.institution.inst_name, comparison_path(c)%></td>
      <td><%=c.clean_number_of_peers%></td>
      <td><%=c.weights_compact%></td>
      <td><%=I18n.l c.created_at%></td>
    </tr>
    <%end%>
  </tbody>
</table>
<%= will_paginate @comparisons %>